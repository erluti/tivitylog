#!/usr/bin/env ruby

require 'tivitylog'

logger = Tivitylog::Logger.new({
  timestamp: Time.now,
  username: Etc.getlogin,
  process: Process.argv0,
  command_ine: "#{Process.argv0} #{ARGV.join(' ')}",
  pid: Process.pid
})

args = ARGV.dup
command = args.shift
activity =
  case command
  when 'create'
    file = args.shift
    Tivitylog::CreateFile.new(file, logger)
  when 'modify'
    file = args.shift
    Tivitylog::ModifyFile.new(file, logger)
  when 'delete'
    file = args.shift
    Tivitylog::DeleteFile.new(file, logger)
  when 'run'
    Tivitylog::RunProcess.new(args, logger)
  else
    raise 'no activity provided'
  end

activity.perform